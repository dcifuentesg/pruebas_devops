{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:ci": "vitest run --reporter=verbose --coverage.enabled --coverage.reporter=text --coverage.reporter=lcov",
    "start": "npx nodemon server.js",
    "dev": "npx nodemon server.js",
    "serve": "node server.js",
    "lint": "echo 'No linter configured' && exit 0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "validator": "^13.15.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.0",
    "nodemon": "^3.0.0",
    "vitest": "^1.0.0"
  }
}
